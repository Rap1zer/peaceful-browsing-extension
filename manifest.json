{
  "manifest_version": 3,
  "name": "Health anxiety blocker",
  "version": "1.0",
  "description": "Block certain websites to prevent Dr.Google",
  "permissions": ["activeTab", "storage", "webNavigation", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "main.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styling/blocked-results.css"],
      "js": ["javascript/binarySearch.js", "javascript/content.js"]
    }
  ],
  "background": {
    "service_worker": "javascript/background.js"
  }
}
