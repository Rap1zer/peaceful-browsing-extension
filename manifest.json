{
  "manifest_version": 3,
  "name": "Health anxiety blocker",
  "version": "1.0",
  "description": "Block certain websites to prevent Dr.Google",
  "permissions": ["activeTab", "storage", "webNavigation", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "main.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
